<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shongywong.mewviecat.MovieDetailActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_frag_movie_detail_poster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        android:minHeight="300dp"
        android:minWidth="200dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_frag_movie_detail_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_frag_movie_detail_poster"
        android:layout_toEndOf="@+id/imageView_frag_movie_detail_poster"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView2_frag_movie_detail_date"
        android:layout_below="@+id/textView_frag_movie_detail_title"
        android:layout_toRightOf="@+id/imageView_frag_movie_detail_poster"
        android:layout_toEndOf="@+id/imageView_frag_movie_detail_poster"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView3_frag_movie_detail_rating"
        android:layout_below="@+id/textView2_frag_movie_detail_date"
        android:layout_toRightOf="@+id/imageView_frag_movie_detail_poster"
        android:layout_toEndOf="@+id/imageView_frag_movie_detail_poster"
        android:textSize="12dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/imageView_frag_movie_detail_poster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/textView4_frag_movie_detail_summary"
            android:textSize="18dp"/>
    </ScrollView>

</RelativeLayout>
